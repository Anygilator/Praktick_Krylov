<Window x:Class="Praktick_Krylov.Shop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Praktick_Krylov"
        mc:Ignorable="d"
        Title="Shop" Height="450" Width="800">
    <StackPanel>
        <Label/>
        <StackPanel Orientation="Horizontal">
            <Label/>
            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5">
                <StackPanel Width="200" Height="287">
                    <Rectangle Width="200" Height="200" Fill ="Red"></Rectangle>
                    <TextBlock FontSize="17" Text="Мазь" FontWeight="Black"/>
                    <TextBlock FontSize="15" Text="150$"/>
                    <TextBlock FontSize="11" Text="144 осталось" FontWeight="Thin"/>
                    <Label/>
                    <Button Content="В корзину"/>
                </StackPanel>
            </Border>
        </StackPanel>   
    </StackPanel>
</Window>
